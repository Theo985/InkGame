local placeId = game.PlaceId

-- Table des scripts
local scripts = {
    [71827013685940]   = "https://raw.githubusercontent.com/Theo985/InkGame/refs/heads/main/shark_io.lua",
    [99567941238278]   = "https://raw.githubusercontent.com/Theo985/InkGame/refs/heads/main/Ink%20Game%20Script.lua",
    [12411473842]      = "https://raw.githubusercontent.com/Theo985/InkGame/refs/heads/main/Pressure",
    [126884695634066]  = "https://raw.githubusercontent.com/Theo985/InkGame/refs/heads/main/GAG%20Script",
    [537413528]        = "https://raw.githubusercontent.com/Theo985/InkGame/refs/heads/main/BABFT.lua",
    [2753915549]       = "https://raw.githubusercontent.com/Theo985/InkGame/refs/heads/main/Blox%20Fruit.lua",
    [142823291]        = "https://raw.githubusercontent.com/Theo985/InkGame/refs/heads/main/MM2.lua",
}

-- Fonction pour lancer Private Server TP
local function launchPrivateServerTP()
    pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/veil0x14/LocalScripts/refs/heads/main/pg.lua"))()
    end)
end

if placeId == 71827013685940 then
    -- Shark.io
    if _G.DevKeyValidated then
        -- Si déjà validé dans une session précédente, charger directement le script
        local ok, err = pcall(function()
            loadstring(game:HttpGet(scripts[71827013685940]))()
        end)
        if not ok then
            warn("Erreur lors du chargement du script : "..tostring(err))
        end
    else
        -- Demander la clé
        local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
        local Window = Rayfield:CreateWindow({
            Name = "Shark.io Key Check",
            LoadingTitle = "Shark.io",
            LoadingSubtitle = "by Kondax",
            ConfigurationSaving = { Enabled = false },
            KeySystem = false
        })

        local KeyTab = Window:CreateTab("Key", 4483362458)

        KeyTab:CreateTextBox({
            Name = "Enter Dev Key",
            PlaceholderText = "Type your key here...",
            RemoveTextAfterFocusLost = true,
            Callback = function(text)
                if text == "DevToolsKey" then -- Remplace par ta clé
                    _G.DevKeyValidated = true -- marque comme validée
                    Rayfield:Notify({
                        Title = "Key Accepted",
                        Content = "Loading Shark.io script...",
                        Duration = 3,
                        Image = 4483362458
                    })
                    -- Charger le script principal Shark.io
                    local ok, err = pcall(function()
                        loadstring(game:HttpGet(scripts[71827013685940]))()
                    end)
                    if not ok then
                        warn("Erreur lors du chargement du script : "..tostring(err))
                    end
                else
                    Rayfield:Notify({
                        Title = "Key Incorrect",
                        Content = "Teleporting to private server...",
                        Duration = 3,
                        Image = 4483362458
                    })
                    launchPrivateServerTP()
                end
            end
        })
    end
else
    -- Autres jeux
    local scriptURL = scripts[placeId]

    if scriptURL then
        print("Chargement du script pour le jeu ID :", placeId)
        local ok, err = pcall(function()
            loadstring(game:HttpGet(scriptURL))()
        end)
        if not ok then
            warn("Erreur lors de l'exécution du script : "..tostring(err))
        end
    else
        -- Kick le joueur si le jeu n'est pas dans la liste
        local reason = "Game is not in the list !"
        warn(reason)
        game.Players.LocalPlayer:Kick(reason)
    end
end
